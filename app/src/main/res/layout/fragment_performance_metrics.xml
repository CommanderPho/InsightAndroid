<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.unicauca.jesusmunoz.insightandroid.HomeActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emo State"
        android:id="@+id/textView7" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="engagement/Boredom: "
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:id="@+id/tv_enboredom"
            android:elegantTextHeight="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="excitementLongTerm: "
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:id="@+id/tv_exlong" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="instantaneousExcitement:"
            android:id="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:id="@+id/tv_exins" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="relaxation: "
            android:id="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:id="@+id/tv_relaxationScore" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="stress: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:id="@+id/tv_stress_score" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="interest: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:id="@+id/tv_interest_score" />
    </LinearLayout>

<!--    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_boredom_container"></RelativeLayout>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Engagement/boredom"
                android:background="@android:color/black"
                android:id="@+id/textView2"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_engagementBoredom"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Instantaneous Excitement"
                android:background="@android:color/black"
                android:id="@+id/textView5"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_instantaneousExcitement"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Long Term Excitement"
                android:background="@android:color/black"
                android:id="@+id/textView9"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_longTermExcitement"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Excitement - Stress"
                android:background="@android:color/black"
                android:id="@+id/textView10"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_relaxationStress"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Interest"
                android:background="@android:color/black"
                android:id="@+id/textView11"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_interest"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>


    </ScrollView>







</LinearLayout>
